<h1>Books</h1>

<table>
  <thead>
    <th>Title</th>
    <th>body</th>
    <th colspan="3"></th>
  </thead>
</table>

<h2>New book</h2>

<%= form_with model: @book, url:'', method: :post do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    <!--<input class="book_title" type="text" name="book[title]" id="book_title">-->
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
    <!--<textarea class="book_body" name="book[body]" id="book_body"></textarea>-->
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
    <!--<input type="submit" name="commit" value="Create Book" data-disable-with="Create Book">-->
  </div>
<% end %>
